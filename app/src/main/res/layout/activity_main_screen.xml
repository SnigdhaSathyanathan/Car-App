<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/car_wallpaper"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".view.MainScreen">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:titleTextColor="@color/white"
        app:title="@string/title"
        android:layout_marginBottom="@dimen/spacing_16dp"
        android:padding="@dimen/spacing_24dp">
        <ImageView
            android:id="@+id/account"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/spacing_24dp"
            android:background="@drawable/profile_rounded_corner"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="@dimen/spacing_8dp"
            android:orientation="horizontal"/>
</LinearLayout>